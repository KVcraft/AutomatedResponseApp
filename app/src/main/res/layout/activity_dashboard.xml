<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <!-- Air Pressure -->
    <TextView
        android:id="@+id/tvAirPressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Pressure"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/tvDashboardTitle"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1013 hPa"
        android:padding="10dp"
        android:background="@drawable/data_label_bg"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:layout_below="@id/tvAirPressureLabel"
        android:layout_marginBottom="24dp" />

    <!-- Temperature -->
    <TextView
        android:id="@+id/tvTemperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/tvPressure" />

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.5 Â°C"
        android:padding="10dp"
        android:background="@drawable/data_label_bg"
        android:textSize="18sp"
        android:textColor="#2196F3"
        android:layout_below="@id/tvTemperatureLabel" />

    <!-- Tank Frame -->

    <!-- Water Level -->

    <FrameLayout
        android:id="@+id/tankFrame"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:layout_toEndOf="@id/tvDashboardTitle"
        android:background="@drawable/tank_border">

        <View
            android:id="@+id/waterLevel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:background="@drawable/water_fill" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvWaterLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Level"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/tankFrame"
        android:layout_alignStart="@id/tankFrame"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvWaterMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="480 mm"
        android:padding="10dp"
        android:background="@drawable/data_label_bg"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/tvWaterLevelLabel"
        android:layout_alignStart="@id/tankFrame" />
</RelativeLayout>
